<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="com.taxsms">

  <uses-permission android:name="android.permission.INTERNET" />
  <!-- 接收短信权限 -->
  <uses-permission android:name="android.permission.RECEIVE_SMS" />
  <!-- 读取短信权限 -->
  <uses-permission android:name="android.permission.READ_SMS" />
  <!-- 删除短信权限 -->
  <uses-permission android:name="android.permission.WRITE_SMS" />
  <!-- 广播接受 -->
  <uses-permission android:name="com.example.broadcast.permission" />
  <!-- 屏幕唤醒 无效-->
  <uses-permission android:name="android.permission.WAKE_LOCK" />
  <!-- 屏幕熄灭 无效-->
  <uses-permission android:name="android.permission.DEVICE_POWER" />

  <application android:name=".MainApplication" android:label="@string/app_name" android:icon="@mipmap/ic_launcher" android:roundIcon="@mipmap/ic_launcher_round" android:allowBackup="false"
      android:persistent ="true" android:theme="@style/AppTheme">
    <activity android:name=".MainActivity" android:label="@string/app_name" android:configChanges="keyboard|keyboardHidden|orientation|screenSize" android:windowSoftInputMode="adjustResize">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>
    <activity android:name="com.facebook.react.devsupport.DevSettingsActivity" />
    <receiver android:name="ListeningSmsGet" android:enabled="true" android:exported="true" android:directBootAware="true">
      <intent-filter>
        <action android:name="android.provider.Telephony.SMS_RECEIVED">
        </action>
      </intent-filter>
      <!-- 兼容oppo手机 -->
      <intent-filter>
        <action android:name="android.provider.OppoSpeechassist.SMS_RECEIVED">
        </action>
      </intent-filter>
    </receiver>

    <!-- 音乐 -->
    <!-- <service android:name=".PlayerMusicService" android:enabled="true" android:exported="true" android:process=":music_service"/> -->

    <!-- 一像素 -->
    <activity android:name=".OnePXActivity" android:launchMode="singleInstance" android:theme="@style/OnePxStyle" android:excludeFromRecents="true" android:screenOrientation="portrait" />

    <!-- 广播 静态注册 无效 -->
    <receiver android:name=".ScreenStatusReceiver">
      <intent-filter>
        <action android:name="android.permission.DEVICE_POWER" />
      </intent-filter>
      <intent-filter>
        <action android:name="android.permission.WAKE_LOCK" />
      </intent-filter>
      <intent-filter>
        <action android:name="android.permission.SCREEN_ON" />
      </intent-filter>
      <intent-filter>
        <action android:name="android.permission.SCREEN_OFF" />
      </intent-filter>
      <intent-filter>
        <action android:name="android.intent.action.ACTION_SCREEN_OFF" />
      </intent-filter>
      <intent-filter>
        <action android:name="android.intent.action.ACTION_SCREEN_ON" />
      </intent-filter>
    </receiver>

  </application>
</manifest>
